@model WebProje.Models.Ogrenci
@{
    ViewBag.Title = "OgrenciGetir";
    Layout = "~/Views/Shared/_OgrenciLayout.cshtml";
}

<h2>Öğrenci Güncelle</h2>
<br />

@using (Html.BeginForm("OgrenciGuncelle", "Ogrenci", FormMethod.Post))
{
    <div style="margin-bottom:15px">
        @Html.HiddenFor(y => y.OgrenciID)
        @Html.LabelFor(x => x.OgrenciAdiSoyadi)
        @Html.TextBoxFor(x => x.OgrenciAdiSoyadi, new { @class = "form-control" })
    </div>
    <div style="margin-bottom:15px">
        @Html.LabelFor(x => x.OgrenciNo)
        @Html.TextBoxFor(x => x.OgrenciNo, new { @class = "form-control" })
    </div>
    <div style="margin-bottom:15px">
        @Html.LabelFor(x => x.OgrenciDogumTarihi)
        @Html.TextBoxFor(x => x.OgrenciDogumTarihi, new { @class = "form-control" })
    </div>
    <div style="margin-bottom:15px">
        @Html.LabelFor(x => x.OgrenciKayitTarihi)
        @Html.TextBoxFor(x => x.OgrenciKayitTarihi, new { @class = "form-control" })
    </div>
    <div style="margin-bottom:15px">
        @Html.LabelFor(x => x.OgrenciBolumu)
        @Html.TextBoxFor(x => x.OgrenciBolumu, new { @class = "form-control" })
    </div>
    <button class="btn btn-success">Öğrenci Güncelle</button>
}
